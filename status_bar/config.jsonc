{
  "layer": "top",
  "position": "top",
  "height": 60,
  "margin-left": 120,
  "margin-right": 120,
  "modules-left": ["clock", "custom/wttr", "cpu", "memory", "disk"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["group/hardware", "group/system"],

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "backlight", "battery"]
  },

  "group/system": {
    "orientation": "horizontal",
    "modules": ["network", "tray"]
  },

  "mpris": {
    "interval": 1,
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "title-len": 20,
    "artist-len": 20,
    "ignored-players": ["firefox"],
    "player-icons": {
      "plasma-browser-integration": "ï‰© ",
      "spotify": "ó°“‡",
      "default": "â–¶",
      "mpv": "ğŸµ"
    },
    "status-icons": {
      "paused": "â¸ï¸"
    }
  },
  "clock": {
    // "format": "ïº  {:%H:%M}",
    "format": "{: ï³ %F ïº %H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'>{}</span>",
        "days": "<span color='#ecc6d9'>{}</span>",
        "weeks": "<span color='#99ffdd'>W{}</span>",
        "weekdays": "<span color='#ffcc66'>{}></span>",
        "today": "<span color='#ff6699'><u>{}</u></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "custom/wttr": {
    "format": "{}",
    "tooltip": true,
    "interval": 3600,
    "exec": "~/.config/hypr/scripts/wttr.py",
    "return-type": "json",
    "on-click": "~/.config/hypr/scripts/random_wallpaper.sh ~/Pictures/wallpapers-main",
    "on-click-right": "~/.config/hypr/scripts/wallpaper_select.sh ~/Pictures/wallpapers-main"
  },

  "cpu": {
    "interval": 1,
    "format": "ï’¼ {usage}%"
  },

  "memory": {
    "interval": 1,
    "format": "ï¬™ {percentage}%",
    "states": {
      "warning": 85
    }
  },

  "disk": {
    "interval": 30,
    "format": "ï‚  {used}",
    "path": "/home/iamjijyong",
    "tooltip": true,
    "tooltip-format": "{used}/{total} => {path} {percentage_used}%"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon}ïŠ” {volume}%",
    "format-muted": "ó°¸ˆ {volume}%",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ó°‹",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": ["ï€¦", "ï€§", "ï€¨"]
    },
    "scroll-step": 1,
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"]
  },

  "backlight": {
    "device": "intel_backlight",
