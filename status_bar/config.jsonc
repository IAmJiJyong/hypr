  },

  "battery": {
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "max-length": 10,
    "format": "{icon} {capacity}%",
    "format-warning": "{icon} {capacity}%",
    "format-critical": "{icon} {capacity}%",
    "format-charging": "ï–ƒ {capacity}%",
    "format-plugged": "ï‡¦ {capacity}%",
    "format-alt": "{icon} {capacity}%",
    "format-full": "ï‡¦ 100%",
    "format-icons": ["ï•¹", "ï•º", "ï•»", "ï•»", "ï•½", "ï•¾", "ï•¿", "ï–€", "ï–", "ï•¸"]
  },
  "network": {
    "interval": 1,
    "format-wifi": " {icon} {essid}",
    "format-ethernet": " ó°ˆ€  {ifname} ",
    "format-linked": " {icon} {essid} (No IP)",
    "format-disconnected": " ó°²› Disconnected",
    "format-icons": ["ó°¤¯", "ó°¤Ÿ", "ó°¤¢", "ó°¤¥", "ó°¤¨"],
    "on-click": "konsole -e nmtui",
    "tooltip": true,
    "tooltip-format-wifi": "{ifname} {signalStrength}% {bandwidthTotalBytes}",
    "tooltip-format-ethernet": "{ifname} {bandwidthTotalBytes}"
